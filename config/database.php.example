<?php
/**
 * Database Configuration Template (MongoDB)
 * 
 * Copy this file to database.php and update with your database credentials
 * This file is used by the installer to generate database.php
 */

// MongoDB configuration
// For local: mongodb://localhost:27017
// For Atlas: mongodb+srv://username:password@cluster.mongodb.net/
define('MONGODB_URI', 'mongodb://localhost:27017');
define('MONGODB_DB', 'property_management');

// Database connection
function getDBConnection() {
    try {
        require_once __DIR__ . '/../vendor/autoload.php';
        
        $client = new MongoDB\Client(MONGODB_URI);
        $db = $client->selectDatabase(MONGODB_DB);
        
        return $db;
    } catch (Exception $e) {
        error_log("MongoDB connection failed: " . $e->getMessage());
        return null;
    }
}
